<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:id="@+id/view_menu_list"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#0B172E" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp">
                            <ImageView
                                android:id="@+id/iv_diary"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/diary"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:background="@drawable/round_menu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/iv_diary"
                                app:layout_constraintEnd_toEndOf="@+id/iv_diary"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_diary"
                                android:text="DIARY"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginBottom="10dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp">
                            <ImageView
                                android:id="@+id/iv_vaccine"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/vaccine"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:background="@drawable/round_menu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/iv_vaccine"
                                app:layout_constraintEnd_toEndOf="@+id/iv_vaccine"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_vaccine"
                                android:text="백신패스관"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginBottom="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp">
                            <ImageView
                                android:id="@+id/iv_letter"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/letter"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:background="@drawable/round_menu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/iv_letter"
                                app:layout_constraintEnd_toEndOf="@+id/iv_letter"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_letter"
                                android:text="O.T"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginBottom="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp">
                            <ImageView
                                android:id="@+id/iv_card"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/card"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:background="@drawable/round_menu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/iv_card"
                                app:layout_constraintEnd_toEndOf="@+id/iv_card"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_card"
                                android:text="제휴/할인"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginBottom="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp">
                            <ImageView
                                android:id="@+id/iv_movie"
                                android:layout_width="70dp"
                                android:layout_height="90dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/movie"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:background="@drawable/round_menu"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="@+id/iv_movie"
                                app:layout_constraintEnd_toEndOf="@+id/iv_movie"
                                app:layout_constraintBottom_toBottomOf="@+id/iv_movie"
                                android:text="무비피드"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:layout_marginBottom="10dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_white"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/view_menu_list"
                android:background="@drawable/round_view" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_white"
                app:tabMode="scrollable">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#박스오피스" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#상영예정" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#돌비시네마" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#몬스터짐아레나" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#단독" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#클소" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#필소" />
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#N스크린" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/tab_framelayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/tablayout" />

            <LinearLayout
                android:id="@+id/more_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_framelayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더 많은 영화보기"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_moviefeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/more_linear"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="무비피드"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_moviefeed"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_below="@id/tv_moviefeed"
                android:layout_marginTop="25dp"
                android:src="@drawable/moviefeed" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_movieheadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_moviefeed"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:elevation="10dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/movieheadline"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12월 2주 무비헤드라인"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="킹메이커 22년 개봉 연기. 정치인 '김운범'과 선거\n 전략가 '서창대'의 치열한 선거전쟁 이야기"
                            android:layout_marginLeft="15dp"
                            android:textSize="12dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview_movieheadline"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="#fff"
                android:elevation="10dp"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fridayboxoffice"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="금요일 박스오피스"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="국내는 물론 해외까지! 지금 관람객에게 사랑받는 영화는 \n무엇일까? 1위는 스파이더맨: 노 웨이 홈 그럼 2,3,4,5위..."
                            android:layout_marginLeft="15dp"
                            android:textSize="12dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</FrameLayout>